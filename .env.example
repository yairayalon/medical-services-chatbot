# ==== Azure OpenAI (Chat) ====
# Your Azure OpenAI endpoint URL (without /openai suffix)
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/

# Your Azure OpenAI API key
AZURE_OPENAI_KEY=your-azure-openai-api-key-here

# Your GPT-4o deployment name
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# ==== Azure OpenAI (Embeddings) ====
# Your Azure OpenAI embeddings endpoint URL
AZURE_OPENAI_EMBEDDINGS_ENDPOINT=https://your-openai-resource.openai.azure.com

# Your Azure OpenAI embeddings API key (can be the same as chat key)
AZURE_OPENAI_EMBEDDINGS_KEY=your-azure-openai-api-key-here

# Your text-embedding-ada-002 deployment name
AZURE_OPENAI_EMBEDDINGS_DEPLOYMENT=text-embedding-ada-002

# ==== App Configuration ====
# Path to the phase2_data directory containing HTML knowledge base files
PHASE2_DATA_DIR=./phase2_data

# Path where the knowledge base index will be stored
KB_INDEX_PATH=./data/kb_index.npz

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO